@model KutuphaneYonetimSistemi.Models.Entity.TBL_Kitap_Talep

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Create</h2>
<span id="ControllerMessage">@ViewBag.X</span>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Name of Book</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Kitap_Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kitap_Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Name of Author</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Yazar_Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yazar_Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Name of Category</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Kategori_Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kategori_Ad, "", new { @class = "text-danger" }) 
            </div> 
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/RequestBook/Index" class="btn btn-default">Go Back</a>
</div>
