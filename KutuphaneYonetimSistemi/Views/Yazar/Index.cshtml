@using KutuphaneYonetimSistemi.Models.Entity
@model List<TBLYAZAR> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Authors</h2>

<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>NAME</th>
        <th>SURNAME</th>
        <th>DETAIL</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>
    @foreach(var y in Model)
     {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@y.DETAY</td>
            <td>@Html.ActionLink("Sil","YazarSil", new {id = y.ID }, new { @class = "btn btn-danger",
           onclick = "return confirm('Silmek İstiyor Musunuz?')"})</td>

            <td> <a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
     }
</table>

<a href="/Yazar/YazarEkle/" class="btn btn-primary">Add New Author</a>