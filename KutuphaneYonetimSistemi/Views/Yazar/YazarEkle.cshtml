@model KutuphaneYonetimSistemi.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>Author Name</label>
        <br />
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.AD)
    </div>

    <div style="margin-top:15px">
        <label>Author Surname</label>
        <br />
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y =>y.SOYAD)
    </div>

    <div style="margin-top:15px">
        <label>Detail</label>
        <br />
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info">Add Author </button>
    </div>
</form>
