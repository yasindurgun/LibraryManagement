@model KutuphaneYonetimSistemi.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>

@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{

<table class="table table-hover" style="margin-top:30px;">
    <tr>
        <td>
            Mail Adresi: @HttpContext.Current.User.Identity.Name
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.ID)
            @Html.TextBoxFor(x => x.ID, new { @class = "form-cntrol" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.AD)
            @Html.TextBoxFor(x => x.AD, new { @class = "form-cntrol" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.SOYAD)
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-cntrol" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.KULLANICIADI)
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-cntrol" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.SIFRE)
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-cntrol" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.OKUL)
                @Html.TextBoxFor(x => x.OKUL, new { @class = "form-cntrol" })
            </td>
    </tr>
    <tr> <td><button class="btn btn-warning">Güncelle</button></td>  </tr>
</table>
}